<h3 class="ui header">{{t "forms.i-i-s-kursovaya18-расчет-ост-врем-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.было
      class=(if (v-get validationModel "было" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya18-расчет-ост-врем-e.было-caption")
      data-test-i-i-s-kursovaya18-расчет-ост-врем-e-было=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "было" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.доступно
      class=(if (v-get validationModel "доступно" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya18-расчет-ост-врем-e.доступно-caption")
      data-test-i-i-s-kursovaya18-расчет-ост-врем-e-доступно=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "доступно" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.использовано
      class=(if (v-get validationModel "использовано" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya18-расчет-ост-врем-e.использовано-caption")
      data-test-i-i-s-kursovaya18-расчет-ост-врем-e-использовано=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "использовано" "message")}}
  </div>
</form>
